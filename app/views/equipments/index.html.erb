<div class= "container">
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path('camping00.jpg') %>')">
    <h1>🏕️⛺️ CampingLife 🍿🏖️<h1>
</div>

<div class='pt-5 pb-2'>
  <%= form_with url: equipments_path, method: :get do |f| %>
    <div class='d-flex'>
      <%= f.label :address, class: 'sr-only' %>
      <%= f.text_field :address, value: params[:address], class: 'form-control' %>
      <%= f.submit 'Search', class: 'btn btn-primary text-white' %>
    </div>
  <% end %>
</div>


<div class="cards">
  <% @equipments.each_with_index do |equipment, index| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(equipment.images.first.key) %>')">
      <div class="card-content">
        <strong class="equipment-name"><%= link_to equipment.name, equipment_path(equipment), class: "equipment-link" %></strong>
        <p class="equipment-price">Price: <%= equipment.price %> per day</p>
      </div>
    </div>
  <% end %>
</div>


<div style="width: 100%; height: 600px; margin-top: 50px; margin-bottom: 50px"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
</div>


<footer class="text-center text-white" style="background-color: #F2541B;">
  <!-- Grid container -->
  <div class="container p-4">
    <!-- Section: Iframe -->
    <section class="">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-6">
          <div class="ratio ratio-16x9">
            <iframe
              class="shadow-1-strong rounded"
              src="https://www.youtube.com/embed/ETORWgahumI"
              title="YouTube video"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>
    </section>
    <!-- Section: Iframe -->
  </div>
  <!-- Grid container -->

  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: #000000;">
    © 2025 Copyright:
    <a class="text-white" href="https://campinglife.com/">Campinglife.com</a>
  </div>
  <!-- Copyright -->
</footer>
